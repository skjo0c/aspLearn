<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ideas</title>
    <script src="~/Scripts/myIdea.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background: white; padding: 0">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand">Ideator</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="@Url.Action("Index", "Ideas")">Home</a></li>
            </ul>
            
            <ul class="nav navbar-nav navbar-right">
                @if (@Session["Username"] != null)
                {
                    <li class="sign_out">
                        <a href="@Url.Action("Signout", "Home")"><span class="glyphicon glyphicon-user"></span> Sign Out</a>
                    </li>
                }
            </ul>

        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>